<% include ./partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header centered text"><%= dog.name %></div>
    <div class="ui top attached ">
        <div class="item">
            <img class='ui centered rounded image' src="<%= dog.image %>">
            <div class="content">
                <p><span class="bold">Breed: </span> <%= dog.breed %></p>
                <p><span class="bold">Gender: </span> <%= dog.gender %></p>
                <h2 class="ui header centered text">MEET <%= dog.name.toUpperCase() %> </h2>
            </div>
            <div class="description">
                <p><%= dog.body %></p>
            </div>
            <a class='ui inverted blue button' href="/dogs/<%= dog._id%>/adopt">Adopt Me <i class="paw icon"></i></a>
           
        </div>
    </div>
  </div>

<% include ./partials/footer%>
